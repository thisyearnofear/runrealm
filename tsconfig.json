{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowJs": false,
    "noImplicitAny": true,
    "typeRoots": [
      "node_modules/@types",
      "./custom_typings"
    ],
    "jsx": "react"
  },
  "exclude": [
    "webpack.config.js",
    "webpack-build.config.js",
    "webpack-service.config.js",
    "node_modules/@types/mocha",
    "src/legacy"
  ]
}