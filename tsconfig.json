{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "@runrealm/shared-core/*": ["./packages/shared-core/*"],
      "@runrealm/shared-types/*": ["./packages/shared-types/*"],
      "@runrealm/shared-utils/*": ["./packages/shared-utils/*"],
      "@runrealm/shared-blockchain/*": ["./packages/shared-blockchain/*"],
      "@runrealm/web-app/*": ["./packages/web-app/*"],
      // Maintain backward compatibility
      "@/*": ["./packages/web-app/*"],
      "@core/*": ["./packages/shared-core/*"],
      "@services/*": ["./packages/shared-core/services/*"],
      "@components/*": ["./packages/shared-core/components/*"]
    }
  },
  "include": ["packages/**/*", "types/**/*"],
  "exclude": [
    "node_modules",
    "config",
    "docs",
    "static",
    "public",
    "build",
    "artifacts",
    "tools",
    "infrastructure",
    "test",
    "packages/mobile-app/**/*",
    "**/__tests__/**/*",
    "**/*.test.ts",
    "**/*.test.js",
    "**/*.spec.ts",
    "**/*.spec.js"
  ]
}
