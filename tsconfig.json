{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@runrealm/shared-core/*": ["./packages/shared-core/*"],
      "@runrealm/shared-types/*": ["./packages/shared-types/*"],
      "@runrealm/shared-utils/*": ["./packages/shared-utils/*"],
      "@runrealm/shared-blockchain/*": ["./packages/shared-blockchain/*"],
      "@runrealm/web-app/*": ["./packages/web-app/*"],
      // Maintain backward compatibility
      "@/*": ["./packages/web-app/*"],
      "@core/*": ["./packages/shared-core/*"],
      "@services/*": ["./packages/shared-core/services/*"],
      "@components/*": ["./packages/shared-core/components/*"]
    }
  },
  // Add references to monorepo packages for TypeScript
  "references": [
    {"path": "./packages/shared-core"},
    {"path": "./packages/shared-types"},
    {"path": "./packages/shared-utils"},
    {"path": "./packages/shared-blockchain"},
    {"path": "./packages/web-app"}
  ]
}