{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared-core/*"],
      "@shared-types/*": ["../shared-types/*"],
      "@shared-utils/*": ["../shared-utils/*"],
      "@blockchain/*": ["../shared-blockchain/*"],
      "@web/*": ["./*"],
      "@mobile/*": ["./*"]
    }
  }
}